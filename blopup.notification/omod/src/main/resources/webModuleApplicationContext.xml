<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-2.5.xsd">

    <context:component-scan base-package="org.openmrs.module.blopup.notification"/>

    <bean id="messagingMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
        <property name="order">
            <value>2</value>
        </property>
        <property name="mappings">
            <props>
                <prop key="module/blopup.notification/admin/sendMessage.form">sendMessageController</prop>
                <prop key="**/messagesPatientDashboardTab.portlet">messagesPatientDashboardTab</prop>
                <prop key="module/blopup.notification/admin/manageGateways.form">manageGatewaysController</prop>
                <prop key="module/blopup.notification/admin/manageAddresses.form">manageAddressesController</prop>
            </props>
        </property>
    </bean>

    <bean id="manageAddressesController"
          class="org.openmrs.module.blopup.notification.web.controller.ManageAddressesController"/>
    <bean id="sendMessageController"
          class="org.openmrs.module.blopup.notification.web.controller.SendMessageController"/>
    <bean id="manageGatewaysController"
          class="org.openmrs.module.blopup.notification.web.controller.ManageGatewaysController">
        <property name="gatewayManager">
            <ref bean="gatewayManager"/>
        </property>
    </bean>
    <bean id="messagesPatientDashboardTab"
          class="org.openmrs.module.blopup.notification.web.controller.MessagingDashboardTabController"/>
</beans>
