<?xml version="1.0" encoding="UTF-8"?>

<!-- Beans to add to the current Application context definition -->
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
    http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">
    <!-- Database Access -->
    <bean parent="serviceContext">
        <property name="moduleService">
            <list>
                <value>org.openmrs.module.blopup.notification.MessageService</value>
                <bean class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
                    <property name="transactionManager"><ref bean="transactionManager"/></property>
                    <property name="target">
                        <bean class="org.openmrs.module.blopup.notification.impl.MessageServiceImpl">
                            <property name="messageDAO">
                                <bean class="org.openmrs.module.blopup.notification.db.hibernate.HibernateMessageDAO">
                                    <property name="sessionFactory"><ref bean="sessionFactory"/></property>
                                </bean>
                            </property>
                        </bean>
                    </property>
                    <property name="preInterceptors">
                        <ref bean="serviceInterceptors" />
                    </property>
                    <property name="transactionAttributeSource">
                        <bean class="org.springframework.transaction.annotation.AnnotationTransactionAttributeSource"/>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean parent="serviceContext">
        <property name="moduleService">
            <list>
                <value>org.openmrs.module.blopup.notification.MessagingAddressService</value>
                <bean class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
                    <property name="transactionManager"><ref bean="transactionManager"/></property>
                    <property name="target">
                        <bean class="org.openmrs.module.blopup.notification.impl.MessagingAddressServiceImpl">
                            <property name="messagingAddressDAO">
                                <bean class="org.openmrs.module.blopup.notification.db.hibernate.HibernateMessagingAddressDAO">
                                    <property name="sessionFactory"><ref bean="sessionFactory"/></property>
                                </bean>
                            </property>
                        </bean>
                    </property>
                    <property name="preInterceptors">
                        <ref bean="serviceInterceptors" />
                    </property>
                    <property name="transactionAttributeSource">
                        <bean class="org.springframework.transaction.annotation.AnnotationTransactionAttributeSource"/>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <!--  Gateway Manager -->
    <bean id="gatewayManager" class="org.openmrs.module.blopup.notification.domain.gateway.GatewayManager"/>

    <bean parent="serviceContext" >
        <property name="moduleService">
            <list>
                <value>org.openmrs.module.blopup.notification.MessagingService</value>
                <bean class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
                    <property name="transactionManager"><ref bean="transactionManager"/></property>
                    <property name="target">
                        <bean class="org.openmrs.module.blopup.notification.impl.MessagingServiceImpl">
                            <property name="gatewayManager"><ref bean="gatewayManager"/></property>
                        </bean>
                    </property>
                    <property name="preInterceptors">
                        <ref bean="serviceInterceptors" />
                    </property>
                    <property name="transactionAttributeSource">
                        <bean class="org.springframework.transaction.annotation.AnnotationTransactionAttributeSource"/>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean parent="serviceContext">
        <property name="moduleService">
            <list>
                <value>org.openmrs.module.blopup.notification.EncryptionService</value>
                <bean class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
                    <property name="transactionManager"><ref bean="transactionManager"/></property>
                    <property name="target">
                        <bean class="org.openmrs.module.blopup.notification.impl.EncryptionServiceImpl" />
                    </property>
                    <property name="preInterceptors">
                        <ref bean="serviceInterceptors" />
                    </property>
                    <property name="transactionAttributeSource">
                        <bean class="org.springframework.transaction.annotation.AnnotationTransactionAttributeSource"/>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

</beans>